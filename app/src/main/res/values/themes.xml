<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> <!-- @color/colorPrimary -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- @color/colorPrimaryDark -->
        <item name="colorAccent">@color/colorAccent</item> <!-- @color/colorAccent -->
        <item name="android:textColorSecondary">@color/colorText</item> <!-- SHOULD NOT APPEAR -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AppTheme.AlertDialogTheme.TitleStyle</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="AppTheme.AlertDialogTheme.TitleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorNav</item>
    </style>
</resources>